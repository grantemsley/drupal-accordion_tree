/**
 * Implements hook_field_formatter_view().
 */
function accordion_tree_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
    firep($items);
  foreach ($items as $delta => $item) {
    $outputbody = _text_sanitize($instance, $langcode, $item, 'value');
    $outputheader = _text_sanitize($instance, $langcode, $item, 'header');
    
    $element[$delta] = array('#header' => $outputheader);
    $element[$delta] = array('#markup' => $outputbody);
  }
  
  $tree = array();
  $refs = array(0 => &$tree);
  $depth = 1;
  $depths = array(0 => $depth);
  
  foreach ($element as $delta => $item) {

    $parent = $items[$delta]['parent'];
    if (isset($depths[$parent])) {
      $depth = $depths[$parent];
    }
    else {
      $depths[$delta] = ++$depth;
    }
    $refs[$parent][] = array(
      'data' => '<div class="field-value field-value-' . ($delta + 1) . '">' . $item['#markup'] . '</div>',
      'children' => array(),
      'class' => array('depth depth-' . $depth),
    );
    $refs[$delta + 1] = &$refs[$parent][count($refs[$parent]) - 1]['children'];
  }
  if ($tree) {
    $result = array(
      array(
        '#markup' => theme('item_list', array(
          'items' => $tree,
          'attributes' => array('class' => array('depth', 'depth-0')),
        )),
      ),
    );
  }
  else {
    $result = FALSE;
  }

  return $result;
}


