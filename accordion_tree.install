<?php

/**
 * @file
 * Install, update and uninstall functions for the accordion_tree module.
 */

/**
 * Implements hook_field_schema().
 */
function accordion_tree_field_schema($field) {
  $columns = array(
    'value' => array(
      'type' => 'text',
      'size' => 'big',
      'not null' => FALSE,
    ),
    'header' => array(
      'type' => 'varchar',
      'size' => '255',
      'not null' => FALSE,
    ),
  );

  return array(
    'columns' => $columns,
    'indexes' => array(
      'format' => array('format'),
    ),
    'foreign keys' => array(
      'format' => array(
        'table' => 'filter_format',
        'columns' => array('format' => 'format'),
      ),
    ),
  );
}
